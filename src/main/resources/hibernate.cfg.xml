<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:mysql://localhost:3306/models2pathway</property>
        <property name="connection.username">Models2Pathways</property>
        <property name="connection.password">Models2Pathways</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <property name="show_sql">false</property>

        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">5</property>
        <property name="current_session_context_class">thread</property>


        <mapping class="uk.ac.ebi.models2pathways.database.entitys.BioModel"/>
        <mapping class="uk.ac.ebi.models2pathways.database.entitys.Pathway"/>
        <mapping class="uk.ac.ebi.models2pathways.database.entitys.XReferences"/>

    </session-factory>
</hibernate-configuration>